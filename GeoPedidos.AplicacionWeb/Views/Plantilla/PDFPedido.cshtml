@model GeoPedidos.AplicacionWeb.Models.ViewModels.VMPDFPedido
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Imprimir Pedido</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #03A99F;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #03A99F;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }

        .td-item-center {
            border-bottom: 2px solid #E8E8E8 !important;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td><p class="title">Estado del Pedido: @Model.Estado.ToUpper()</p></td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">Numero de Pedido: @Model.NumeroPedido</p></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />

        <!-- ------------------------------------------------- -->
        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Pedido)
                    {
                        <tr>
                            <td class="td-item-center"><p class="item">@item.CodigoDetalle </p></td>
                            <td class="td-item"><p class="item">@item.DescripcionDetalle</p></td>
                            <td class="td-item"><p class="item">@item.CategoriaDetalle</p></td>
                            <td class="td-item-center"><p class="item">@item.CantidadDetalle</p></td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>

</body>
</html>